<div class="d-flex justify-content-between flex wrap flex-md nowrap align-items-center pt-3 pt-2 mb-3      border-bottom">
    <h1 class="h2">Editing <%= employee.Name %></h1>

    <div class="btn-toorbar mb-2 mb-nd 0">
        <div class="btn-group me-2">
            <button class="btn btn-sm btn-outline-secondary">?</button>
        </div>
    </div>
</div>


<div class="col py-3">
    <div class="row">
        <div class="col">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
                    <li class="breadcrumb-item active"><%= employee.Name %></li>
                </ol>
            </nav>
        </div>
        <div class="col text-end fw-lighter">
            <b>Last Updated: <%= new Date(employee.updatedAt).toUTCString() %></b>
            <b>UserId:</b> <%= employee._id %>
        </div>
    </div>
</div>


<form action="/edit/<%= employee._id %>?_method=PUT" method="POST">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="<%= employee.Name %>" placeholder="Name" required>
        </div>

        <div class="col">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="<%= employee.Email %>" placeholder="Email" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="tel">Telephone</label>
            <input type="text" class="form-control" id="tel" name="tel" value="<%= employee.Telephone %>" placeholder="Telephone" required>
        </div>

        <div class="col">
            <label for="dept">Department</label>
            <input type="text" class="form-control" id="dept" name="dept" value="<%= employee.Department %>" placeholder="Department" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="salary">Salary</label>
            <input type="text" class="form-control" id="salary" name="salary" value="<%= employee.Salary %>" placeholder="Salary" required>
        </div>
    </div>


    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Update Employee</button>


        <button type="button" class="btn btn-danger" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete Employee</button>
    </div>
</form>


<div class="modal fade" tabindex="-1" role="dialog" id="deleteModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title">You are about to remove a employee record!</div>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="close"></button>
            </div>

            <div class="modal-body">
                <p>
                    This will remove the employee record of <b class="fw-bold"><%= employee.Name %> <%= employee.Email %></b><br/>
                    Are you sure?
                </p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>

                <form action="/edit/<%= employee._id %>?_method=DELETE" method="POST" class="position-relative">
                    <button type="submit" class="btn btn-primary"> Yes, Remove Employee</button>
                </form>

            </div>

        </div>
    </div>
</div>