<form action="/add" method="POST">
    <div class="row form-group mb-4">
        <div class="col">
            <label for="name">Name</label>
            <input type="text" class="form-control" id="name" name="name" value="" placeholder="Name" required>
        </div>

        <div class="col">
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email" name="email" value="" placeholder="Email" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="tel">Telephone</label>
            <input type="number" class="form-control" id="tel" name="tel" value="" placeholder="Telephone" required>
        </div>

        <div class="col">
            <label for="dept">Department</label>
            <input type="text" class="form-control" id="dept" name="dept" value="" placeholder="Department" required>
        </div>
    </div>

    <div class="row form-group mb-4">
        <div class="col">
            <label for="salary">Salary</label>
            <input type="text" class="form-control" id="salary" name="salary" value="" placeholder="Salary" required>
        </div>
    </div>

    <div class="form-group mb-4">
        <button type="submit" class="btn btn-primary">Add Employee</button>
    </div>
</form>